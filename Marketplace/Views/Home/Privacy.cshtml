@model IEnumerable<Marketplace.Models.ModuleModel>    
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="text-center">
    <h1 class="display-4">View your Modules and Pending Bids</h1>
</div>
 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ModuleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AcademicYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bids)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {       
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcademicYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester)
                </td>
                <td>
                    <!-- Trigger/Open The Modal -->
                    <button id="@item.Id">@GetUnreadMessages(@item.Id)</button>

                    <!-- The Modal -->
                    <div id="@item.ModuleCode" class="modal">

                        <!-- Modal content -->
                        <div class="modal-content">
                            <div class="modal-header">
                                <h2>Bids for @item.ModuleName (@item.ModuleCode)</h2>
                                <span class="close">&times;</span>
                            </div>
                            <div class="modal-body">
                                <p>Info about bidders goes here</p>
                            </div>
                    </div> 

                    <script>
                        // Get the modal
                        var modal = document.getElementById("@item.ModuleCode");

                        // Get the button that opens the modal
                        var btn = document.getElementById("@item.Id");

                        // Get the <span> element that closes the modal
                        var span = document.getElementsByClassName("close")[0];

                        // When the user clicks the button, open the modal 
                        btn.onclick = function() {
                            modal.style.display = "block";
                        }

                        // When the user clicks on <span> (x), close the modal
                        span.onclick = function() {
                            modal.style.display = "none";
                        }

                        // When the user clicks anywhere outside of the modal, close it
                        window.onclick = function(event) {
                            if (event.target == modal) {
                                modal.style.display = "none";
                            }
                        }
                    </script>
                </td>
            </tr>
        }
    </tbody>
</table>   

@functions{
    public static string GetUnreadMessages(int moduleId)
    {
     // Get your unread messages (just like before)
     
        if(moduleId == 1){
            return "1";
        }
        return "3";
    }
}